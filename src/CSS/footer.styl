.footer__main
    padding 40px
    width 100% 
    height 100%
    background #111
    color #f4f4f4
    font-family: "Bebas", Arial, Helvetica, sans-serif
    overflow hidden
.footer__flex
    display flex
    justify-content: center
    align-items: center
    flex-wrap: wrap
.img__wrap
    width 200px
    height 200px
    padding 20px
    img 
     width 100%
     height auto
     opacity .5
     filter: grayscale(30%)
.footer__section
    flex 1 30%
    margin 20px
    
    h3 
        font-size 1.2rem
        padding-bottom 10px
    ul
        font-family: "Open-Sans", Arial, Helvetica, sans-serif
        li 
            list-style: none
            line-height: 1.5em
.footer__copy
    flex 1 100%
    font-family: "Open-Sans", Arial, Helvetica, sans-serif
    font-weight: 200
    text-align: right
    padding-top 50px
.footer__social 
    display flex
    justify-content: space-between
.footer__social-icons
    flex 1 
    img 
        width 50px
        cursor pointer
        filter: sepia(100%)
@media screen and (max-width 600px)
    .footer__section
        text-align: center
        ul
            li
                text-align: center
    .footer__copy
        text-align: center