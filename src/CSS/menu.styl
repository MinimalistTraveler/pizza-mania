.menu
    height 100vh
    background #444
    border-top 1px solid #CCC
    border-bottom 1px solid #CCC
    color #DDD
    display flex
    flex-wrap wrap
.menu__nav
    flex 40%
    display flex
    flex-wrap wrap
    background #333
    justify-content center
.menu__header
    flex 100%
    display grid 
    place-items center
    padding 20px
    font-family "Bebas", Arial, Helvetica, sans-serif
    font-size 1.5rem
    position relative
    > h1 
        z-index: 9999
.menu__main
    flex 1 60%
    display flex 
    align-items center
    justify-content center
    flex-wrap wrap
    padding 10px
    > ul
        flex 100%
    > div, li 
        list-style none
        font-weight 300
        font-family "Open Sans", Arial, Helvetica, sans-serif
        font-size 1.5rem
        padding 10px
        text-shadow 2px 2px 10px rgba(#000, .5)
        display flex
        > span 
            margin-left auto
        > div
            display block
            height 2px 
            width 100%
            border-bottom 2px dotted #ddd
            text-align center
            padding 10px
            margin 10px
    button 
        width 30%
        margin-left auto
        margin-right 20px
        padding 10px
        border none
        font-family "Bebas", Arial, Helvetica, sans-serif
        cursor pointer
        font-size 1.5rem
        background transparent
        color #CCC
        text-shadow 2px 2px 10px rgba(#000, .5)
        border-bottom 3px solid #CCC
        
.menu__main-nav
    background rgba(#222, .7)
    display flex
    align-items center
    flex-wrap wrap
    flex 100%
    justify-content center
    z-index 1
    > a 
        font-size 1.5rem
        font-family "Bebas", Arial, Helvetica, sans-serif
        color #dddddd
        text-decoration none
        padding 20px
        &:hover
            background #d1d1d1
            color #222
.menu__img
    position absolute
    top 0 
    bottom 0 
    left 0 
    right 0
    width 100%
    min-height: 700px
            
.btn__wrap
    flex 1 40%
    margin-right auto

@media screen and (max-width 968px)
    .menu
        z-index -999
    .menu__main
        flex 100%
        z-index: 1
        background rgba(#222, .7)
    .menu__img
        position absolute
        