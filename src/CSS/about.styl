.about
    background "Raleway", Arial, sans-serif
    height 100vh
    position relative
    border-bottom 1px solid #ccc
.about__wrap
    position absolute
    img 
        z-index -1
        width 100%
        height 100vh
        filter sepia(20%)
.about__wrap-content
    width 70%
    order 1
    padding 20px
    background #222
    height 100vh
    clip-path polygon(0 0, 100% 0, 91% 100%, 0% 100%);
    display flex
    justify-content center
    align-items center
    text-align justify
    line-height 2rem
    box-shadow 2px 2px 10px rgba(#000, .5)
    border-top 1px solid #cccccc
    h1 
        padding-bottom 20px
        font-family "Bebas", Arial, Helvetica, sans-serif
        font-size 3rem

    p  
        padding-right 50px
        font-family "Raleway", Arial, Helvetica, sans-serif
.about-mobile
    display flex
    padding 20px
    background #222
    flex-wrap wrap
.about__wrap-mobile
    flex 1 100%
    img 
        width 100%
        height auto
.about__content-mobile
    line-height 2em
    h1 
        font-family "Bebas", Arial, Helvetica, sans-serif
        padding 20px 0px
    p 
        text-align justify
        font-family "Raleway", Arial, Helvetica, sans-serif