// Contact Form Cover
.contact
    width 100%
    position relative
    display grid
    place-items: center
.form__cover
    width 100%
    height 100%
    position relative
    img 
        display grid
        place-items: center
        width 100%
        filter: sepia(50%)
        z-index: -1
        position relative
    &:after
        content ""
        position absolute
        top 0
        left 0
        right 0
        bottom 0
        z-index: 1
        display block
.form
    position relative
    bottom 0
    display flex
    justify-content center
    font-family: Raleway, Arial, Helvetica, sans-serif
    background #222
    border-top 1px solid #CCC
    border-bottom 1px solid #CCC
    box-shadow: 0px 0px 15px 0px rgba(0,0,0,0.75);
    width 100%
.form__main
    display flex
    flex-wrap: wrap
    z-index 1
    padding 20px
    width 100%
    h1 
        flex 1 100%
        font-family: Bebas, Arial, Helvetica, sans-serif
        padding 10px 
.form__input-wrap
    flex 1 40% 
    margin 10px
    &:nth-child(4)
        flex 1 100%
    > label
        margin-bottom 20px
    input 
        width 100%
        padding 15px
        font-size 1.1rem
        margin-top 10px
        font-family: Open-Sans, Arial, Helvetica, sans-serif
        border 1px solid #D1D1D1
        border-radius: 5px
        &:focus
            border 1px solid #33C3F0
            outline none
    textarea
        flex 1 100%
        width 100%
        height 200px
        resize: none
        padding 20px
        font-family: Open-Sans, Arial, Helvetica, sans-serif
        font-size 1.1rem
        margin-top 10px
.form__btn
    width 40%
    margin auto
    background #333333
    font-family: Bebas, Arial, Helvetica, sans-serif
    border 0px
    padding 10px
    font-size 1.4rem
    color #FFF
    border-radius: 5px
    cursor pointer
    transition .2s ease-in
    &:hover
         background darken(#ba0101, 30%)
         color #DDD
         transition .2s ease-in


@media screen and (max-width: 968px)
    .form__input-wrap
        flex 1 100%
    .form__btn
        width 97%